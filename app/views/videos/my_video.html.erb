<div class="span8">
  <% if @videos.any? %>
      <h3>My videos (<%= @videos.count %>)</h3>
          <% @videos.each do |video| %>
          <ol class="microposts">
            <li id="<%= video.id %>">
              <span class="user"><%= video.title%></span>
              <span class="timestamp">
                Posted <%= time_ago_in_words(video.created_at) %> ago.
              </span>
            </li>

          </ol>
          <section class="col-sm-6 col-md-3">
            <a href="#" class="thumbnail">
              <img src="<%= video.get_thump_url(video.youtube_id) %>" alt="...">
            </a>
          </section>
          <% end %>
      <%= will_paginate @videos %>
  <% end %>
</div>