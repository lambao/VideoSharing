<div class="container-fluid">
  <h3 class="video_header">Assign role</h3>
  <%= form_tag("", method: "post") do %>
  <div class="row-fluid">
    <div class="span4">
      Username:
    </div>
    <div class="span8">
      Role:
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
        <%= @user.name %>
    </div>
    <div class="span8">
      <div class="control-group">
        <div class="controls">
          <label for="role" class="radio inline"></label>
          <% [ 'admin', 'guest'].each do |role| %>
              <%=
                  if (@user.has_role?(:admin) && (role == 'admin'))
                    radio_button_tag('role', role, true)
                  elsif (@user.has_role?(:guest) && (role == 'guest'))
                    radio_button_tag 'role', role, true
                  else
                    radio_button_tag 'role', role
                  end
              %>
              <%= role.humanize %>
          <% end %>
        </div>
      </div>
    </div>
    <%= submit_tag("Update", class: "btn btn-large btn-primary") %>
    <% end %>
  </div>
</div>