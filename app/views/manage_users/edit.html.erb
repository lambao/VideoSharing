<div class="container-fluid">
  <h3 class="video_header">Assign role</h3>
  <%= form_tag("", method: "post") do %>
  <div class="row-fluid">
    <div class="span4">
      Username:
    </div>
    <div class="span8">
      Role:
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
        <%= @user.name %>
    </div>
    <div class="span8">
      <div class="control-group">
        <div class="controls">
          <% if @user.has_role?(:admin) %>
          <label class="radio inline" for="radios-<%= @user.id %>">
            <input name="role" id="radios-<%= @user.id %>" value="admin" type="radio" checked>
            Admin
          </label>
          <label class="radio inline" for="radios-<%= @user.id %>">
            <input name="role" id="radios-<%= @user.id %>" value="guest" type="radio">
            Guest
          </label>
          <% else %>
          <label class="radio inline" for="radios-<%= @user.id %>">
            <input name="role" id="radios-<%= @user.id %>" value="admin" type="radio" >
            Admin
          </label>
          <label class="radio inline" for="radios-<%= @user.id %>">
            <input name="role" id="radios-<%= @user.id %>" value="guest" type="radio" checked>
            Guest
          </label>
          <% end %>
        </div>
      </div>
    </div>
    <%= submit_tag("Update") %>
    <% end %>
  </div>
</div>